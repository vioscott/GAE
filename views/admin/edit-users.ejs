    <script>
        function openModal(id) {
        $.ajax({
            type: 'POST',
            url: '/get-user-details',
            data: { id: id },
            success: function(data) {
            // Populate modal fields with data
            $('#firstName').val(data.username);
            $('#lastName').val(data.name);
            $('#inputEmail').val(data.email);
            $('#inputNumber').val(data.phone);
            $('#inputWallet').val(data.wallet);
            $('#inputPlan').val(data.plan);
            $('#user_id').val(data.user_id);
            $('#select-box').val(data.active).change(); // Change dropdown selection
            $('#hiddenEditbtn').click(); // Trigger hidden modal
            }
        });
        }

        function blockUser(id) {
        $.ajax({
            type: 'POST',
            url: '/block-user',
            data: { user_id: id },
            success: function(response) {
            alert(response);
            location.reload(); // Refresh page after successful block
            }
        });
        }

        function unblockUser(id) {
        $.ajax({
            type: 'POST',
            url: '/unblock-user',
            data: { user_id: id },
            success: function(response) {
            alert(response);
            location.reload(); // Refresh page after successful unblock
            }
        });
        }
    </script>
